@model Project_1.Models.StudentRegistration

@{
    ViewBag.Title = "Register Student";
}

<h2>Register for Placement</h2>

@if (TempData["Message"] != null)
{
    <script>
        alert("@TempData["Message"]");
    </script>
}

@using (Html.BeginForm("RegisterStudent", "Placement", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Placement ID:</label>
        <input type="number" name="placementId" class="form-control" value="@Model.PlacementId" required />
    </div>

    <div class="form-group">
        <label>Student ID:</label>
        <input type="number" name="studentId" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
}
